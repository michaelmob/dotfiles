# Global properties
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none


# Volume
[volume-pulseaudio]
command=$SCRIPT_DIR/volume-pulseaudio/volume-pulseaudio -F 3 -H '墳 ' -M '奔 ' -L '奔 ' -X 'M ' -c "#ff0000"
interval=once
signal=10


# CPU
[load_average]
label=﬙
command=$SCRIPT_DIR/load_average/load_average
interval=10


# Memory
[memory]
label=
interval=30


# Disk
[disk]
label=
