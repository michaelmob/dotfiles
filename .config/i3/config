# i3 config file
# github.com/thetarkus/dotfiles


#
# settings
#

set $mod Mod4
font pango:monospace 8
floating_modifier $mod
focus_follows_mouse no


#
# application shortcuts
#

# play/pause music player
bindsym Pause exec playerctl play-pause

# launch screenshot utility
bindsym ctrl+shift+4 exec flameshot gui

# launch layer manager
bindsym $mod+g exec i3-layout-manager

# start launcher
bindsym $mod+Shift+d exec rofi -show run
bindsym $mod+d exec rofi -show drun

# start terminal
bindsym $mod+Return exec $TERMINAL


#
# window management
#

# kill focused window
bindsym $mod+Shift+c [con_id="__focused__" title="^(?!math).*$"] kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# swap focused window (non-destructive)
bindsym $mod+Shift+h mark swap; focus left;  swap container with mark swap; unmark swap; focus left
bindsym $mod+Shift+j mark swap; focus down;  swap container with mark swap; unmark swap; focus down
bindsym $mod+Shift+k mark swap; focus up;    swap container with mark swap; unmark swap; focus up
bindsym $mod+Shift+l mark swap; focus right; swap container with mark swap; unmark swap; focus right

# move focused window (destructive)
bindsym $mod+Ctrl+h move left
bindsym $mod+Ctrl+j move down
bindsym $mod+Ctrl+k move up
bindsym $mod+Ctrl+l move right

# resize focused window
bindsym $mod+Ctrl+Shift+h resize shrink width  5 px or 5 ppt
bindsym $mod+Ctrl+Shift+j resize grow   height 5 px or 5 ppt
bindsym $mod+Ctrl+Shift+k resize shrink height 5 px or 5 ppt
bindsym $mod+Ctrl+Shift+l resize grow   width  5 px or 5 ppt

# split orientation
bindsym $mod+v split h; mark _move
bindsym $mod+s split v; mark _move

# enter fullscreen mode for the focused container
bindsym $mod+f split v; focus parent; fullscreen toggle; focus child

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+e layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+r layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# toggle sticky
bindsym $mod+Shift+s sticky toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+Shift+a focus child

# focus urgent window
bindsym $mod+u [urgent="latest"] focus

# move window to newest split
bindsym $mod+y move container to mark _move

# move window to newest split then rotate container
bindsym $mod+Shift+y move container to mark _move;


#
# workspaces
#

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10


#
# window settings
#
#

# assign applications to workspaces
assign [class="Spotify"] $ws9
assign [class="Slack"] $ws10
assign [class="discord"] $ws10

# floating windows
for_window [instance="gnome-control-center"] floating enable
for_window [class="flameshot"] floating enable


#
# scratchpads
#

# math scratchpad
for_window [title="^math$"] move scratchpad
bindsym $mod+grave [title="^math$"] scratchpad show
exec --no-startup-id $TERMINAL --title=math -e $HOME/.bin/math_scratchpad.py


#
# desktop environment
#

# session
bindsym $mod+Ctrl+r  restart
bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit?' -B Yes 'i3-msg exit'"


#
# bar
#

# i3bar
bar {
  status_command i3status
}
