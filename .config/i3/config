# i3 config file
# github.com/thetarkus/dotfiles


#
# settings
#

set $mod Mod4
font pango:monospace 8
floating_modifier $mod
focus_follows_mouse no


#
# autostart
#

# user applications
exec --no-startup-id $BROWSER
exec --no-startup-id telegram-desktop
exec --no-startup-id discord
#exec --no-startup-id slack


#
# application shortcuts
#

# play/pause music player
bindsym Pause exec playerctl play-pause

# launch flameshot screen shot utility
bindsym ctrl+shift+4 exec flameshot gui

# xfce4 settings
bindsym $mod+F1 exec xfce4-settings-manager


#
# window management
#

# start terminal
bindsym $mod+Return exec $TERMINAL

# kill focused window
bindsym $mod+Shift+c [con_id="__focused__" title="^(?!math).*$"] kill

# start dmenu
bindsym $mod+Shift+d exec dmenu_run
bindsym $mod+d exec i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# resize focused window
bindsym $mod+Shift+y resize shrink width  10 px or 10 ppt
bindsym $mod+Shift+u resize grow   height 10 px or 10 ppt
bindsym $mod+Shift+i resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+o resize grow   width  10 px or 10 ppt

# split orientation
bindsym $mod+v split h
bindsym $mod+s split v

# enter fullscreen mode for the focused container
bindsym $mod+f split v; focus parent; fullscreen toggle; focus child

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Ctrl+s layout stacking
bindsym $mod+Ctrl+e layout tabbed
bindsym $mod+t layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# toggle sticky
bindsym $mod+Shift+s sticky toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# focus urgent window
bindsym $mod+u [urgent="latest"] focus


#
# workspaces
#

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10


#
# window settings
#
#

default_orientation vertical

# toggle orientation automatically
for_window [class=".*"] split toggle

# assign applications to workspaces
assign [class="Slack"] $ws10
assign [class="discord"] $ws10

# floating windows
for_window [instance="gnome-control-center"] floating enable
for_window [class="flameshot"] floating enable


#
# scratchpads
#

# math scratchpad
for_window [instance="^math$"] move scratchpad
bindsym $mod+c [instance="^math$"] scratchpad show
exec --no-startup-id $TERMINAL --class=math -e $HOME/.bin/math_scratchpad.py


#
# desktop environment
#

# session
bindsym $mod+Ctrl+r reload
bindsym $mod+Ctrl+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit?' -B Yes 'i3-msg exit'"


#
# bar
#

# i3bar
bar {
  status_command i3status
}
