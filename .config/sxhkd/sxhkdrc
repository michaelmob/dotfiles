#
# Configuration
#

# Reload sxhkdrc
super + shift + r
  pkill -USR1 -x sxhkd


#
# Application Launchers
#

# Launch math scratchpad
super + c
  $HOME/.scripts/scratchpad math "konsole -p tabtitle=math -e $HOME/.scripts/math"


#
# Window Management
#

# Move window
super + ctrl + {h,j,k,l}
  $HOME/.scripts/move_window {left,down,up,right} 50

# Resize window
super + alt + {h,j,k,l}
  $HOME/.scripts/resize_window {left,down,up,right} 50


#
# Workspace Management
#

# Swap workspaces
super + shift + {p,n}
  $HOME/.scripts/move_workspace {left,right}
