#
# Application Launchers
#

# Launch terminal
super + Return
  $TERMINAL

# Launch screenshot utility
ctrl + shift + 4
  flameshot gui

# Launch math scratchpad
super + c
  $HOME/.scripts/scratchpad math "alacritty -t math -e $HOME/.scripts/math"


#
# Window Management
#

# Close window
super + shift + q
  xdotool getwindowfocus windowclose

# Focus window
#super + {h,j,k,l}
#  $HOME/.scripts/focus_window {left,down,up,right}

# Move window
super + shift + {h,j,k,l}
  $HOME/.scripts/move_window {left,down,up,right} 50

# Resize window
super + ctrl + {h,j,k,l}
  $HOME/.scripts/resize_window {left,down,up,right} 50

# Switch workspaces
super + {1-9,0}
  wmctrl -s $(({1-9,10}-1))

# Switch window to workspace
super + shift + {1-9,0}
  wmctrl -r :ACTIVE: -t $(({1-9,10}-1))


#
# Configuration
#

# Reload sxhkdrc
super + r
  pkill -USR1 -x sxhkd
