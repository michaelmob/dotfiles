#!/usr/bin/env bash

# desktop environment
yay --noconfirm --needed -Sy \
  i3 \
  picom \
  flameshot \
  playerctl \
  gdm \
  gnome \
  gnome-extras \
  gnome-flashback \
  gnome-screensaver \
  xorg \
  xcape \
  keynav \

# utilities
yay --noconfirm --needed -Sy \
  zsh \
  xclip \
  tmux \
  neovim-git \
  ripgrep \
  rofi \

yay --noconfirm --needed -Sy \
  i3-layout-manager-git \
  rofi-file-browser-extended-git

# development
yay --noconfirm --needed -Sy \
  nodejs \
  npm \
  docker \
  docker-compose \
  vagrant \
  virtualbox

# chat
yay --noconfirm --needed -Sy \
  telegram-desktop \
  signal-desktop   \
  slack-desktop    \
  discord

# multimedia
yay --noconfirm --needed -Sy \
  mpv        \
  youtube-dl \
  spotify

# browsers
yay --noconfirm --needed -Sy \
  firefox       \
  brave         \
  google-chrome

# fonts
yay --noconfirm --needed -Sy \
  ttf-ms-fonts     \
  noto-fonts       \
  noto-fonts-emoji
